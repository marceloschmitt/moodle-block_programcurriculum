<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/programcurriculum/db" VERSION="2026012600" COMMENT="Program curriculum block tables"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd">
  <TABLES>
    <TABLE NAME="block_programcurriculum_curriculum" COMMENT="Curriculum definitions">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="externalcode" TYPE="char" LENGTH="100" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="description" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="externalcode" UNIQUE="true" FIELDS="externalcode"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="block_programcurriculum_course" COMMENT="Curriculum courses">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="curriculumid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="externalcode" TYPE="char" LENGTH="100" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="sortorder" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="curriculumid" TYPE="foreign" FIELDS="curriculumid" REFTABLE="block_programcurriculum_curriculum" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="curriculumid" UNIQUE="false" FIELDS="curriculumid"/>
        <INDEX NAME="externalcode" UNIQUE="true" FIELDS="externalcode"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="block_programcurriculum_mapping" COMMENT="Course to Moodle course mapping">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="moodlecourseid" TYPE="int" LENGTH="10" NOTNULL="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="courseid" TYPE="foreign" FIELDS="courseid" REFTABLE="block_programcurriculum_course" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="courseid" UNIQUE="false" FIELDS="courseid"/>
        <INDEX NAME="moodlecourseid" UNIQUE="false" FIELDS="moodlecourseid"/>
        <INDEX NAME="course_moodlecourse" UNIQUE="true" FIELDS="courseid, moodlecourseid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
