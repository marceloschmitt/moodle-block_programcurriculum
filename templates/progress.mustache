<div class="programcurriculum-progress" data-completed-str="{{#str}}completed, block_programcurriculum{{/str}}" data-notcompleted-str="{{#str}}notcompleted, block_programcurriculum{{/str}}">
    <h2 class="mb-2">{{#str}}studentprogress, block_programcurriculum{{/str}} - {{studentname}}</h2>
    {{#hasprogramname}}
        <h3 class="mb-3">{{programname}}</h3>
    {{/hasprogramname}}

    {{#progress}}
    <div class="mt-3 mb-3">
        <div class="mb-2">
            <div class="d-flex justify-content-between mb-1 fw-bold">
                <span>{{#str}}progresspercent, block_programcurriculum{{/str}} {{#str}}progressbycompletion, block_programcurriculum{{/str}}</span>
                <span>{{percent}}% ({{completed}}/{{total}})</span>
            </div>
            <div class="progress" role="progressbar" aria-valuenow="{{percent}}" aria-valuemin="0" aria-valuemax="100">
                <div class="progress-bar" style="width: {{percent}}%">{{percent}}%</div>
            </div>
        </div>
        <div>
            <div class="d-flex justify-content-between mb-1 fw-bold">
                <span>{{#str}}progresspercent, block_programcurriculum{{/str}} {{#str}}progressbyenrollment, block_programcurriculum{{/str}}</span>
                <span>{{enrollmentpercent}}% ({{enrolleddisciplines}}/{{totaldisciplines}})</span>
            </div>
            <div class="progress" role="progressbar" aria-valuenow="{{enrollmentpercent}}" aria-valuemin="0" aria-valuemax="100">
                <div class="progress-bar bg-info" style="width: {{enrollmentpercent}}%">{{enrollmentpercent}}%</div>
            </div>
        </div>
    </div>
    {{/progress}}

    {{#termsections}}
    <div class="mb-4">
        <h5 class="mb-2 text-secondary">{{#str}}term, block_programcurriculum{{/str}} {{term}}</h5>
        <ul class="list-unstyled mt-2">
        {{#courserows}}
            <li class="py-1 border-bottom d-flex align-items-center flex-wrap gap-1 {{#hasmoodle}}programcurriculum-row-enrolled programcurriculum-row-clickable{{/hasmoodle}}" {{#hasmoodle}}data-external-name="{{externalcoursename}}" data-moodlecourses="{{moodlecoursesjson}}" role="button" tabindex="0" aria-label="{{#str}}moodlecoursesforexternal, block_programcurriculum, {{externalcoursename}}{{/str}}"{{/hasmoodle}}>
                <span class="flex-grow-1">{{externalcoursename}}{{#hasmoodle}} <span class="text-muted">({{moodlecount}})</span>{{/hasmoodle}}</span>
                <span class="text-muted">{{#hasmoodle}}{{completedcount}}/{{moodlecount}}{{/hasmoodle}}{{^hasmoodle}}â€”{{/hasmoodle}}</span>
            </li>
        {{/courserows}}
        </ul>
    </div>
    {{/termsections}}

    <button class="d-none" type="button" id="programcurriculum-moodle-modal-trigger" data-bs-toggle="modal" data-bs-target="#programcurriculum-moodle-modal"></button>
    <div class="modal fade" id="programcurriculum-moodle-modal" tabindex="-1" aria-labelledby="programcurriculum-moodle-modal-title" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="programcurriculum-moodle-modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{#str}}close, block_programcurriculum{{/str}}"></button>
                </div>
                <div class="modal-body" id="programcurriculum-moodle-modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{#str}}close, block_programcurriculum{{/str}}</button>
                </div>
            </div>
        </div>
    </div>
</div>
