<div class="programcurriculum-progress" data-completed-str="{{#str}}completed, block_programcurriculum{{/str}}" data-notcompleted-str="{{#str}}notcompleted, block_programcurriculum{{/str}}">
    {{#hassubtitle}}
        <h3 class="mb-3">{{programname}} - {{externalcoursename}}</h3>
    {{/hassubtitle}}

    <div class="mb-2">
        <a class="btn btn-secondary mb-2" href="{{{courseviewurl}}}">{{#str}}backtostudents, block_programcurriculum{{/str}}</a>
    </div>

    {{#progress}}
    <div class="mt-3 mb-3">
        <strong>{{#str}}progresspercent, block_programcurriculum{{/str}}:</strong> {{percent}}%
        ({{completed}}/{{total}})
    </div>
    {{/progress}}

    <table class="generaltable">
        <thead>
            <tr>
                <th>{{#str}}externalcourse, block_programcurriculum{{/str}}</th>
                <th>{{#str}}completionstatus, block_programcurriculum{{/str}}</th>
            </tr>
        </thead>
        <tbody>
        {{#courserows}}
            <tr class="{{#hasmoodle}}programcurriculum-row-enrolled{{/hasmoodle}}">
                <td>
                    {{#hasmoodle}}
                    <strong>{{externalcoursename}}</strong>
                    <button type="button" class="btn btn-sm btn-outline-secondary ms-1 programcurriculum-moodle-btn" data-external-name="{{externalcoursename}}" data-moodlecourses="{{moodlecoursesjson}}" aria-label="{{#str}}moodlecoursesforexternal, block_programcurriculum, {{externalcoursename}}{{/str}}">{{moodlecount}}</button>
                    {{/hasmoodle}}
                    {{^hasmoodle}}
                    <strong>{{externalcoursename}}</strong>
                    <span class="text-muted ms-1">(0)</span>
                    {{/hasmoodle}}
                </td>
                <td>{{#hasmoodle}}{{completedcount}}/{{moodlecount}}{{/hasmoodle}}{{^hasmoodle}}-{{/hasmoodle}}</td>
            </tr>
        {{/courserows}}
        </tbody>
    </table>

    <button class="d-none" type="button" id="programcurriculum-moodle-modal-trigger" data-bs-toggle="modal" data-bs-target="#programcurriculum-moodle-modal"></button>
    <div class="modal fade" id="programcurriculum-moodle-modal" tabindex="-1" aria-labelledby="programcurriculum-moodle-modal-title" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="programcurriculum-moodle-modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{#str}}cancel, moodle{{/str}}"></button>
                </div>
                <div class="modal-body" id="programcurriculum-moodle-modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{#str}}close, block_programcurriculum{{/str}}</button>
                </div>
            </div>
        </div>
    </div>
</div>
