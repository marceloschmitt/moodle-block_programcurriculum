<div class="programcurriculum-manage">
    <h4>{{#str}}listofprograms, block_programcurriculum{{/str}}</h4>

    <div class="mb-3">
        <a class="btn btn-primary" href="{{addcurriculumurl}}">{{#str}}addcurriculum, block_programcurriculum{{/str}}</a>
    </div>

    {{#hascurricula}}
        <table class="generaltable">
            <thead>
                <tr>
                    <th>{{#str}}curriculumname, block_programcurriculum{{/str}}</th>
                    <th>{{#str}}curriculumcode, block_programcurriculum{{/str}}</th>
                    <th>{{#str}}courses, block_programcurriculum{{/str}}</th>
                    <th>{{#str}}actions{{/str}}</th>
                </tr>
            </thead>
            <tbody>
                {{#curricula}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{externalcode}}</td>
                        <td>{{coursecount}}</td>
                        <td>
                            <a href="{{editurl}}">{{#str}}editcurriculum, block_programcurriculum{{/str}}</a>
                            |
                            <a href="{{coursesurl}}">{{#str}}courses, block_programcurriculum{{/str}}</a>
                        </td>
                    </tr>
                {{/curricula}}
            </tbody>
        </table>
    {{/hascurricula}}

    {{^hascurricula}}
        <div class="alert alert-info">{{#str}}nocurricula, block_programcurriculum{{/str}}</div>
    {{/hascurricula}}
</div>
