<div class="programcurriculum-discipline">
    <h3>{{curriculumname}}</h3>

    {{#hasdisciplines}}
        <ul class="list-unstyled">
            {{#disciplines}}
                <li class="d-flex align-items-center py-1 border-bottom">
                    <span class="text-muted me-2">{{position}}</span>
                    <span class="flex-grow-1">{{name}}</span>
                    <div class="dropdown">
                        <button class="btn btn-link p-0 text-decoration-none" type="button" data-bs-toggle="dropdown" aria-expanded="false" aria-label="{{#str}}actions{{/str}}">
                            {{#pix}}i/moremenu, core{{/pix}}
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="{{editurl}}">{{#str}}editdiscipline, block_programcurriculum{{/str}}</a></li>
                            <li><a class="dropdown-item" href="{{mappingurl}}">{{#str}}mappings, block_programcurriculum{{/str}}</a></li>
                            <li><a class="dropdown-item" href="{{moveactionurl}}" data-move-url="{{moveactionurl}}" data-current-position="{{position}}" data-max-position="{{totalpositions}}">{{#str}}move{{/str}}</a></li>
                            {{#candelete}}
                                <li><a class="dropdown-item" href="{{deleteurl}}" data-confirm-message="{{deleteconfirm}}">{{#str}}delete{{/str}}</a></li>
                            {{/candelete}}
                            {{^candelete}}
                                <li><span class="dropdown-item disabled" aria-disabled="true">{{#str}}delete{{/str}}</span></li>
                            {{/candelete}}
                        </ul>
                    </div>
                </li>
            {{/disciplines}}
        </ul>
    {{/hasdisciplines}}

    {{^hasdisciplines}}
        <div class="alert alert-info">{{#str}}nodisciplines, block_programcurriculum{{/str}}</div>
    {{/hasdisciplines}}
</div>
