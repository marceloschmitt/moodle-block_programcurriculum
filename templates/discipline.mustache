<div class="programcurriculum-discipline">
    {{#validationerror}}
        <div class="alert alert-danger">{{#str}}disciplineformerror, block_programcurriculum{{/str}}</div>
    {{/validationerror}}

    <div class="mb-2">
        <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#programcurriculum-discipline-modal">
            {{#str}}adddiscipline, block_programcurriculum{{/str}}
        </button>
        {{#openmodal}}
            <button class="d-none" type="button" data-open-discipline-modal="1" data-bs-toggle="modal" data-bs-target="#programcurriculum-discipline-modal"></button>
        {{/openmodal}}
    </div>

    {{#hasdisciplines}}
        <ul class="list-unstyled">
            {{#disciplines}}
                <li class="d-flex align-items-center py-1 border-bottom">
                    <span class="text-muted me-2">{{position}}</span>
                    <span class="flex-grow-1">{{externalcode}} - {{name}} <span class="text-muted ms-2">({{mappingcount}})</span></span>
                    <div class="dropdown">
                        <button class="btn btn-link p-0 text-decoration-none" type="button" data-bs-toggle="dropdown" aria-expanded="false" aria-label="{{#str}}actions{{/str}}">
                            {{#pix}}i/moremenu, core{{/pix}}
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="{{editurl}}" data-open-discipline-modal="1">{{#str}}edit{{/str}}</a></li>
                            <li><a class="dropdown-item" href="{{mappingurl}}">{{#str}}mappings, block_programcurriculum{{/str}}</a></li>
                            <li><a class="dropdown-item" href="{{moveactionurl}}" data-move-url="{{moveactionurl}}" data-current-position="{{position}}" data-max-position="{{totalpositions}}">{{#str}}move{{/str}}</a></li>
                            {{#candelete}}
                                <li><a class="dropdown-item" href="{{deleteurl}}" data-confirm-message="{{deleteconfirm}}">{{#str}}delete{{/str}}</a></li>
                            {{/candelete}}
                            {{^candelete}}
                                <li><span class="dropdown-item disabled" aria-disabled="true">{{#str}}delete{{/str}}</span></li>
                            {{/candelete}}
                        </ul>
                    </div>
                </li>
            {{/disciplines}}
        </ul>
    {{/hasdisciplines}}

    {{^hasdisciplines}}
        <div class="alert alert-info">{{#str}}nodisciplines, block_programcurriculum{{/str}}</div>
    {{/hasdisciplines}}

    <div class="modal fade" id="programcurriculum-discipline-modal" tabindex="-1" aria-labelledby="programcurriculum-discipline-modal-title" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="programcurriculum-discipline-modal-title">{{modaltitle}}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{#str}}cancel, moodle{{/str}}"></button>
                </div>
                <div class="modal-body">
                    {{{formhtml}}}
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" form="programcurriculum-discipline-form">{{#str}}savechanges{{/str}}</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{#str}}cancel, moodle{{/str}}</button>
                </div>
            </div>
        </div>
    </div>
</div>
